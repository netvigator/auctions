option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "config.settings.production"
  aws:elasticbeanstalk:container:python:
    WSGIPath: "config.wsgi:application"
  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: "/api"
    MatcherHTTPCode: "200-499"

container_commands:
  01_makemigrations:
    command: "source ~/.virtualenvs/auctions/bin/activate && python3 manage.py makemigrations --noinput"
    leader_only: true
  02_migrate:
    command: "source ~/.virtualenvs/auctions/bin/activate && python3 manage.py migrate --noinput"
    leader_only: true
  03_createsu:
    command: "source ~/.virtualenvs/auctions/bin/activate && python3 manage.py createsu"
  04_collectstatic:
    command: "source ~/.virtualenvs/auctions/bin/activate && python3 manage.py collectstatic --noinput"
    leader_only: true
